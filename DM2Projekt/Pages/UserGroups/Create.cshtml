@page
@model DM2Projekt.Pages.UserGroups.CreateModel

@{
    ViewData["Title"] = "Create";
    var userRole = HttpContext.Session.GetString("UserRole");
}

<h1>Create UserGroup</h1>

@if (userRole == "Admin")
{
    <h4>UserGroup</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="UserGroup.UserId" class="control-label"></label>
                    <select asp-for="UserGroup.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                </div>

                <div class="form-group">
                    <label asp-for="UserGroup.GroupId" class="control-label"></label>
                    <select asp-for="UserGroup.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        You are not allowed to create user groups.
    </div>
}

<div class="mt-3">
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

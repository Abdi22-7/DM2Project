@page "{userId:int}/{groupId:int}"
@model DM2Projekt.Pages.UserGroups.DetailsModel

@{
    ViewData["Title"] = "Details";
    var userRole = HttpContext.Session.GetString("UserRole");
}

<h1>Details</h1>

<div>
    <h4>UserGroup</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserGroup.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserGroup.User.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserGroup.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserGroup.Group.GroupName)
        </dd>
    </dl>
</div>

<div>
    <!-- Always show back button -->
    <a asp-page="./Index">Back to List</a>

    <!-- Only Admins can see Edit button -->
    @if (userRole == "Admin")
    {
        <span> | </span>
        <a asp-page="Edit"
           asp-route-userId="@Model.UserGroup.UserId"
           asp-route-groupId="@Model.UserGroup.GroupId">Edit</a>
    }
</div>

@page "{userId:int}/{groupId:int}"
@model DM2Projekt.Pages.UserGroups.DeleteModel

@{
    ViewData["Title"] = "Delete";
    var userRole = HttpContext.Session.GetString("UserRole");
}

<h1>Delete</h1>

@if (userRole == "Admin")
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>UserGroup</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserGroup.User)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserGroup.User.Email)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserGroup.Group)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserGroup.Group.GroupName)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="UserGroup.UserId" />
            <input type="hidden" asp-for="UserGroup.GroupId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
}
else
{
    <div class="alert alert-danger">
        You are not allowed to delete user groups.
    </div>
    <a asp-page="./Index" class="btn btn-secondary mt-3">Back to List</a>
}

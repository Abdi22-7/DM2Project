@page "{userId:int}/{groupId:int}"
@model DM2Projekt.Pages.UserGroups.EditModel

@{
    ViewData["Title"] = "Edit UserGroup";
}

<h1>Edit UserGroup</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="UserGroup.UserId" />
            <input type="hidden" asp-for="UserGroup.GroupId" />

            <div class="form-group">
                <label asp-for="UserGroup.UserId" class="control-label"></label>
                <select asp-for="UserGroup.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>

            <div class="form-group">
                <label asp-for="UserGroup.GroupId" class="control-label"></label>
                <select asp-for="UserGroup.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

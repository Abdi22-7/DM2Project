@page
@model DM2Projekt.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<h2>Forgot your password?</h2>

<p>No worries — just type in your email and we’ll send your password to you. Easy.</p>

<form method="post" style="max-width: 400px;">
    <div class="form-group">
        <label asp-for="Input.Email">Email address</label>
        <input asp-for="Input.Email" class="form-control" placeholder="you@example.com" required />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Send Password</button>

    @if (Model.Message != null)
    {
        <div class="alert alert-info mt-3">@Model.Message</div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

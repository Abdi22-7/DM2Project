@page
@model DM2Projekt.Pages.GroupInvitations.DeleteModel

@{
    ViewData["Title"] = "Delete Invitation";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Invitation</h1>
    <h5 class="mb-4">Are you sure you want to delete this invitation?</h5>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Group</dt>
                <dd class="col-sm-9">@Model.GroupInvitation.Group?.GroupName</dd>

                <dt class="col-sm-3">Invited User</dt>
                <dd class="col-sm-9">@Model.GroupInvitation.InvitedUser?.Email</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @Model.GroupInvitation.IsAccepted switch
                    {
                    true => "Accepted",
                    false => "Declined",
                    null => "Pending"
                    }
                </dd>

                <dt class="col-sm-3">Sent At</dt>
                <dd class="col-sm-9">@Model.GroupInvitation.SentAt.ToString("g")</dd>
            </dl>

            <form method="post" class="mt-4 d-flex gap-2">
                <input type="hidden" asp-for="GroupInvitation.InvitationId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill me-1"></i> Delete
                </button>
                <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

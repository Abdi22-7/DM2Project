@page
@model DM2Projekt.Pages.GroupInvitations.CreateModel
@{
    ViewData["Title"] = "Invite Student";
}

<h1>Invite Student to Group: @Model.Group?.GroupName</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="GroupInvitation.GroupId" />

            <div class="form-group">
                <label asp-for="GroupInvitation.InvitedUserId" class="control-label">Invite Student (Email)</label>
                <select asp-for="GroupInvitation.InvitedUserId" class="form-control" asp-items="Model.EligibleUsers"></select>
                <span asp-validation-for="GroupInvitation.InvitedUserId" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="GroupInvitation.SentAt" />
            <input type="hidden" asp-for="GroupInvitation.IsAccepted" />

            <div class="form-group mt-3">
                <input type="submit" value="Send Invitation" class="btn btn-primary" />
                <a asp-page="/Groups/Details" asp-route-id="@Model.Group?.GroupId" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

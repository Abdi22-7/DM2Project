@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DM2Projekt</title>

    <!-- Bootstrap and icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DM2Projekt.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom shadow-sm mb-3">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand fw-bold text-primary" asp-page="/Index">
                    <i class="bi bi-house-door-fill me-1"></i> DM2Projekt
                </a>

                <!-- Mobile toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Left nav links -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index"><i class="bi bi-house-door me-1"></i>Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Privacy"><i class="bi bi-shield-lock me-1"></i>Privacy</a>
                        </li>

                        @{
                            var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
                            var userRole = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
                        }

                        @if (!string.IsNullOrEmpty(userName))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Bookings/Index"><i class="bi bi-calendar-check me-1"></i>Bookings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Rooms/Index"><i class="bi bi-door-open me-1"></i>Rooms</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Groups/Index"><i class="bi bi-people me-1"></i>Groups</a>
                            </li>

                            if (userRole == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Users/Index"><i class="bi bi-person-gear me-1"></i>Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/UserGroups/Index"><i class="bi bi-link-45deg me-1"></i>UserGroups</a>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Right side: Invitations, profile, logout or login -->
                    <ul class="navbar-nav">
                        @* Invitations for students *@
                        @{
                            var pendingInvites = 0;
                            if (userRole == "Student")
                            {
                                var context = Context.RequestServices.GetService(typeof(DM2Projekt.Data.DM2ProjektContext)) as DM2Projekt.Data.DM2ProjektContext;
                                var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserId");

                                if (context != null && userId.HasValue)
                                {
                                    pendingInvites = context.GroupInvitation
                                    .Where(i => i.InvitedUserId == userId && i.IsAccepted == null)
                                    .Count();
                                }

                                <li class="nav-item position-relative">
                                    <a class="nav-link text-dark" asp-page="/GroupInvitations/Index">
                                        <i class="bi bi-envelope-paper me-1"></i>Invitations
                                        @if (pendingInvites > 0)
                                        {
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger small px-2 py-1">
                                                @pendingInvites
                                                <span class="visually-hidden">pending invitations</span>
                                            </span>
                                        }
                                    </a>
                                </li>
                            }
                        }

                        <!-- If not logged in -->
                        @if (string.IsNullOrEmpty(userName))
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm ms-2" asp-page="/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Profile button -->
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary btn-sm ms-2" asp-page="/UserPage">
                                    <i class="bi bi-person-circle me-1"></i>@userName
                                </a>
                            </li>

                            <!-- Logout button -->
                            <li class="nav-item">
                                <form method="post" asp-page="/Logout" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm ms-2">
                                        <i class="bi bi-box-arrow-right me-1"></i>Logout
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Page content goes here -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - DM2Projekt - <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    var userName = HttpContext.Session.GetString("UserName");
}

<div class="text-center" style="padding: 2rem; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    @if (!string.IsNullOrEmpty(userName))
    {
        <h2 style="margin-bottom: 1rem;">Hello, @userName!</h2>
    }

    <h1 class="display-4">MY SOLDIERS, RAGE!</h1>
    <p style="font-size: 1.2rem;">Fueled by caffeine. Powered by creatine. Inspired by Erwin.</p>
    <img src="https://i.ytimg.com/vi/ipI1qRFo1Us/maxresdefault.jpg" alt="Erwin Smith screaming about pre-workout"
         style="max-width: 400px; border-radius: 12px; box-shadow: 0 0 20px rgba(0,0,0,0.3); margin-top: 1rem;" />
</div>

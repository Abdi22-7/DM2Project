@page
@model DM2Projekt.Pages.UserPageModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">User Profile</h2>

                    <p><strong>Name:</strong> @Model.UserName</p>
                    <p><strong>Email:</strong> @Model.UserEmail</p>
                    <p><strong>Role:</strong> @Model.UserRole</p>

                    <a class="btn btn-primary" asp-page="/EditUserProfile">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>

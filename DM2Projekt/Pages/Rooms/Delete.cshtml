@page
@model DM2Projekt.Pages.Rooms.DeleteModel

@{
    ViewData["Title"] = "Delete Room";
}

<h1>Delete Room</h1>

<h3 class="text-danger">Are you sure you want to delete this room?</h3>

<div>
    <h4>Room Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.RoomName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.RoomType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomType)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Room.RoomId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>

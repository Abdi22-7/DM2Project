@page
@model DM2Projekt.Pages.Rooms.DeleteModel

@{
    ViewData["Title"] = "Delete Room";
}

<div class="container mt-4">
    <h1 class="text-danger mb-4">Delete Room</h1>

    <!-- warning message -->
    <div class="alert alert-warning">
        <h4 class="alert-heading">Are you sure?</h4>
        <p>This will permanently delete the room. You can't undo this.</p>
    </div>

    <!-- card showing room info -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">Room Info</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Room.RoomName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Room.RoomName)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Room.RoomType)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Room.RoomType)
                </dd>
            </dl>
        </div>
    </div>

    <!-- confirm delete form -->
    <form method="post" class="d-flex gap-2">
        <input type="hidden" asp-for="Room.RoomId" />

        <!-- delete button -->
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash-fill"></i> Delete
        </button>

        <!-- back button -->
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </form>
</div>

@page
@model DM2Projekt.Pages.Rooms.CreateModel

@{
    ViewData["Title"] = "Create Room";
}

<div class="container mt-4">
    <h1 class="mb-4">Create New Room</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- lil card for the form -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">Room Info</h4>

                    <form method="post">
                        <!-- show validation errors -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- room name input -->
                        <div class="mb-3">
                            <label asp-for="Room.RoomName" class="form-label"></label>
                            <input asp-for="Room.RoomName" class="form-control" />
                            <span asp-validation-for="Room.RoomName" class="text-danger"></span>
                        </div>

                        <!-- room type dropdown -->
                        <div class="mb-3">
                            <label asp-for="Room.RoomType" class="form-label"></label>
                            <select asp-for="Room.RoomType" class="form-select"
                                    asp-items="Html.GetEnumSelectList<DM2Projekt.Models.Enums.RoomType>()">
                            </select>
                            <span asp-validation-for="Room.RoomType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Room.ImageUrl" class="form-label">Room Image URL</label>
                            <input asp-for="Room.ImageUrl" class="form-control" />
                            <span asp-validation-for="Room.ImageUrl" class="text-danger"></span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Room.ImageUrl))
                        {
                            <div class="mt-3">
                                <img src="@Model.Room.ImageUrl" alt="Room Image" class="img-fluid" />
                            </div>
                        }

                        <!-- buttons -->
                        <div class="d-flex gap-2 mt-4">
                            <a asp-page="./Index" class="btn btn-secondary w-100">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-plus-circle"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@page
@model DM2Projekt.Pages.Rooms.CreateModel

@{
    ViewData["Title"] = "Create Room";
}

<h1>Create New Room</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Room.RoomName" class="control-label"></label>
                <input asp-for="Room.RoomName" class="form-control" />
                <span asp-validation-for="Room.RoomName" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Room.RoomType" class="control-label"></label>
                <select asp-for="Room.RoomType" class="form-control"
                        asp-items="Html.GetEnumSelectList<DM2Projekt.Models.Enums.RoomType>()">
                </select>
                <span asp-validation-for="Room.RoomType" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

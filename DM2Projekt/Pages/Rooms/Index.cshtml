@page
@model DM2Projekt.Pages.Rooms.IndexModel
@using DM2Projekt.Models.Enums

@{
    ViewData["Title"] = "Rooms";
    var userRole = HttpContext.Session.GetString("UserRole");
}

<!-- mobile: show/hide filters -->
<div class="d-md-none mb-2">
    <button class="btn btn-outline-secondary w-100"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#filterCollapse"
            aria-expanded="true"
            aria-controls="filterCollapse">
        <i class="bi bi-filter"></i> Filters
    </button>
</div>

<!-- filters panel -->
<div class="collapse show d-md-block card mb-4" id="filterCollapse" aria-labelledby="filterHeading">
    <div class="card-body py-3">
        <h2 id="filterHeading" class="h5 mb-2">Filters</h2>

        <!-- wrap filters in a grid that auto-wraps -->
        <form method="get" class="row gx-3 gy-2 align-items-end">

            <!-- 🔍 Search -->
            <div class="col-auto flex-grow-1">
                <label asp-for="SearchTerm" class="form-label">
                    <i class="bi bi-search"></i> Search
                </label>
                <input asp-for="SearchTerm"
                       class="form-control"
                       placeholder="Search rooms…"
                       autocomplete="off" />
            </div>

            <!-- 🏠 Building -->
            <div class="col-auto">
                <label asp-for="Building" class="form-label">
                    <i class="bi bi-house-door-fill"></i> Building
                </label>
                <select asp-for="Building"
                        class="form-select"
                        asp-items="Model.BuildingOptions">
                    <option value="">Any</option>
                </select>
            </div>

            <!-- 📶 Floor -->
            <div class="col-auto">
                <label asp-for="Floor" class="form-label">
                    <i class="bi bi-hdd-fill"></i> Floor
                </label>
                <select asp-for="Floor"
                        class="form-select"
                        asp-items="Model.FloorOptions">
                    <option value="">Any</option>
                </select>
            </div>

            <!-- 🏷️ Type -->
            <div class="col-auto">
                <label asp-for="RoomType" class="form-label">
                    <i class="bi bi-tags-fill"></i> Type
                </label>
                <select asp-for="RoomType"
                        class="form-select"
                        asp-items="Model.RoomTypeOptions">
                    <option value="">Any</option>
                </select>
            </div>

            <!-- ⏰ Available next X hours -->
            <div class="col-auto">
                <label class="form-label">&nbsp;</label>
                <button type="submit"
                        name="ShowAvailable"
                        value="true"
                        class="btn btn-outline-primary text-nowrap"
                        aria-pressed="@Model.ShowAvailable.ToString().ToLower()"
                        aria-label="Show rooms available in next @Model.AvailableHours hours">
                    <i class="bi bi-clock-history me-1"></i>
                    Available next @Model.AvailableHours hours
                </button>
            </div>

            <!-- ⚙️ Apply -->
            <div class="col-auto">
                <label class="form-label">&nbsp;</label>
                <button type="submit"
                        class="btn btn-primary text-nowrap"
                        title="Apply filters">
                    <i class="bi bi-funnel me-1"></i> Apply
                </button>
            </div>

            <!-- ❌ Clear -->
            <div class="col-auto">
                <label class="form-label">&nbsp;</label>
                <a asp-page="./Index"
                   class="btn btn-outline-secondary text-nowrap"
                   title="Clear filters">
                    <i class="bi bi-x-circle me-1"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

<div class="container">
    <!-- header: total + admin button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            Rooms <span class="badge bg-secondary">@Model.Rooms.Count</span>
        </h1>
        @if (userRole == "Admin")
        {
            <a asp-page="./Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> New Room
            </a>
        }
    </div>

    @if (!Model.Rooms.Any())
    {
        <div class="alert alert-info">No rooms found. Try widening your filters.</div>
    }
    else
    {
        <!-- cards grid -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var room in Model.Rooms)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-shadow">
                        @* image *@
                        @if (!string.IsNullOrEmpty(room.ImageUrl))
                        {
                            <img src="@room.ImageUrl"
                                 alt="@room.RoomName"
                                 class="card-img-top"
                                 style="height:180px; object-fit:cover;" />
                        }
                        <div class="card-body d-flex flex-column p-3">
                            @* title + type *@
                            <div class="d-flex align-items-center mb-1">
                                <h5 class="card-title mb-0 me-2">@room.RoomName</h5>
                                @{
                                    var prettyType = room.RoomType
                                    .ToString()
                                    .Replace("MeetingRoom", "Meeting Room");
                                }
                                <span class="badge rounded-pill bg-info text-dark small">
                                    @prettyType
                                </span>
                            </div>

                            @* building + floor in one line *@
                            <p class="small text-muted mb-3">
                                <i class="bi bi-house-door-fill me-1"></i>Building @room.Building
                                <span class="mx-2">|</span>
                                <i class="bi bi-hdd-fill me-1"></i>Floor @room.Floor
                            </p>

                            @* actions *@
                            <div class="mt-auto d-flex justify-content-between">
                                <a asp-page="./Details"
                                   asp-route-id="@room.RoomId"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Details
                                </a>

                                @if (userRole == "Student")
                                {
                                    <a asp-page="/Bookings/Create"
                                       asp-route-roomId="@room.RoomId"
                                       class="btn btn-sm btn-primary">
                                        <i class="bi bi-calendar-plus"></i> Book Now
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    /* card hover lift */
    .hover-shadow {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-shadow:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
        }
</style>

@page
@model DM2Projekt.Pages.Rooms.IndexModel

@{
    ViewData["Title"] = "Rooms";
    var userRole = HttpContext.Session.GetString("UserRole");
}

<div class="bg-light p-3 rounded mb-4">
    <form method="get" class="row g-3 align-items-end">

        <!-- room filter dropdown -->
        <div class="col-auto">
            <label for="RoomId" class="form-label">Room</label>
            <select id="RoomId" name="RoomId" class="form-select">
                <option value="">-- All Rooms --</option>
                @if (Model.RoomOptions != null)
                {
                    foreach (var room in Model.RoomOptions)
                    {
                        int roomId = int.Parse(room.Value);
                        if (Model.SelectedRoomId.HasValue && Model.SelectedRoomId.Value == roomId)
                        {
                            <option value="@room.Value" selected>@room.Text</option>
                        }
                        else
                        {
                            <option value="@room.Value">@room.Text</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="col-auto d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-funnel"></i> Apply
            </button>
            <a asp-page="./Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Clear
            </a>
        </div>
        </form>

        <div class="container mt-4">
            <h1 class="mb-4">Rooms</h1>

            <!-- only admins can see Create button -->
            @if (userRole == "Admin")
            {
                <div class="mb-4">
                    <a asp-page="Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Create New Room
                    </a>
                </div>
            }

            <!-- grid for the cards -->
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var item in Model.Room)
                {
                    <div class="col">
                        <div class="card shadow-sm h-100">
                            <div class="card-body d-flex flex-column">
                                <!-- room name -->
                                <h5 class="card-title">@item.RoomName</h5>

                                <!-- room type -->
                                <p class="card-text text-muted mb-4">
                                    @item.RoomType
                                </p>

                                <!-- action buttons -->
                                <div class="mt-auto">
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Details" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Details
                                        </a>

                                        @if (userRole == "Admin")
                                        {
                                            <a asp-page="./Edit" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <a asp-page="./Delete" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

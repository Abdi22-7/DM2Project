@page
@model DM2Projekt.Pages.Groups.DeleteModel

@{
    ViewData["Title"] = "Delete Group";
}

<div class="container mt-4">
    <h1 class="text-danger mb-4">Delete Group</h1>

    @if (Model.Group != null)
    {
        <!-- warning box -->
        <div class="alert alert-warning">
            <h4 class="alert-heading">Are you sure?</h4>
            <p>This will permanently delete the group.</p>
        </div>

        <!-- lil card to show group name -->
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Group Info</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Group.GroupName)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Group.GroupName)
                    </dd>
                </dl>
            </div>
        </div>

        <!-- form to confirm deletion -->
        <form method="post" class="d-flex gap-2">
            <input type="hidden" asp-for="Group.GroupId" />

            <!-- red delete button -->
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash3-fill"></i> Delete
            </button>

            <!-- back to list -->
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </form>
    }
    else
    {
        <!-- fallback error if not allowed -->
        <div class="alert alert-danger">
            You are not allowed to delete this group.
        </div>

        <a asp-page="./Index" class="btn btn-secondary mt-3">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    }
</div>

@page
@model DM2Projekt.Pages.Groups.DetailsModel

@{
    ViewData["Title"] = "Group Details";
    var userRole = HttpContext.Session.GetString("UserRole");
}

<h1>Group Details</h1>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.GroupName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.GroupName)
        </dd>
    </dl>
</div>

<div>
    @* Everyone can go back *@
    <a asp-page="./Index">Back to List</a>

    @* Only Admins can edit *@
    @if (userRole == "Admin")
    {
        <span> | </span>
        <a asp-page="./Edit" asp-route-id="@Model.Group.GroupId">Edit</a>
    }
</div>

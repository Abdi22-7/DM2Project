@page
@model DM2Projekt.Pages.Groups.DetailsModel

@{
    ViewData["Title"] = "Group Details";
    var userRole = HttpContext.Session.GetString("UserRole");
}

<div class="container mt-4">
    <h1 class="mb-3">Group Details</h1>

    <!-- lil card to show group info -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Group Info</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Group.GroupName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Group.GroupName)
                </dd>
            </dl>
        </div>
    </div>

    <!-- action buttons -->
    <div class="mt-4 d-flex justify-content-between">
        <!-- everyone gets this -->
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>

        <!-- admin only gets edit btn -->
        @if (userRole == "Admin")
        {
            <a asp-page="./Edit" asp-route-id="@Model.Group.GroupId" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
        }
    </div>
</div>

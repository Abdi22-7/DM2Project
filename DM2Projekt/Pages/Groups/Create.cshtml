@page
@model DM2Projekt.Pages.Groups.CreateModel

@{
    ViewData["Title"] = "Create Group";
    var userRole = HttpContext.Session.GetString("UserRole");
}

<div class="container mt-4">
    <h1 class="mb-3">Create Group</h1>

    <!-- show error if user not admin -->
    @if (userRole != "Admin")
    {
        <div class="alert alert-danger">
            You are not allowed to create new groups.
        </div>

        <a asp-page="./Index" class="btn btn-secondary mt-3">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    }
    else
    {
        <!-- form card -->
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title">Group Info</h4>
                <hr />

                <!-- form to create group -->
                <form method="post">
                    <!-- validation errors -->
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- group name input -->
                    <div class="mb-3">
                        <label asp-for="Group.GroupName" class="form-label"></label>
                        <input asp-for="Group.GroupName" class="form-control" />
                        <span asp-validation-for="Group.GroupName" class="text-danger"></span>
                    </div>

                    <!-- create btn -->
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-plus-circle"></i> Create
                    </button>
                </form>
            </div>
        </div>

        <!-- back btn -->
        <div class="mt-3 text-center">
            <a asp-page="./Index" class="btn btn-link">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
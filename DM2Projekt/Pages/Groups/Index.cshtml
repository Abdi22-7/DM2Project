@page
@model DM2Projekt.Pages.Groups.IndexModel

@{
    ViewData["Title"] = "Groups";

    var userRole = HttpContext.Session.GetString("UserRole");
    var userId = HttpContext.Session.GetInt32("UserId");

    var totalGroups = Model.Group.Count;

    // Only relevant for students
    var userGroups = (userRole == "Student")
        ? Model.Group.Count(g => g.CreatedByUserId == userId || g.UserGroups.Any(ug => ug.UserId == userId))
        : 0;
}

<div class="container mt-4">
    <h1 class="mb-2">Groups</h1>

    @if (userRole == "Student")
    {
        <p class="text-muted">You are part of @userGroups of @totalGroups group(s).</p>
    }
    else if (userRole == "Teacher")
    {
        <p class="text-muted">Viewing all student groups.</p>
    }
    else if (userRole == "Admin")
    {
        <p class="text-muted">Admin view – full access to all groups.</p>
    }

    <!-- Only students and admins can create -->
    @if (userRole == "Admin" || userRole == "Student")
    {
        <div class="mb-4">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Group
            </a>
        </div>
    }

    @if (totalGroups == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-emoji-neutral"></i> No groups found.
            @if (userRole == "Student" || userRole == "Admin")
            {
                <span> You can create one above.</span>
            }
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var group in Model.Group)
            {
                var isOwner = group.CreatedByUserId == userId;
                var isMember = group.UserGroups.Any(ug => ug.UserId == userId);

                var canView = userRole == "Admin" || userRole == "Teacher" || isOwner || isMember;
                var canEdit = userRole == "Admin" || (userRole == "Student" && isOwner);
                var canDelete = userRole == "Admin" || (userRole == "Student" && isOwner);
                var canInvite = canEdit;

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title">@group.GroupName</h5>

                                <p class="card-text text-muted mb-1">
                                    <i class="bi bi-person-circle me-1"></i>
                                    Created by: @group.CreatedByUser.FirstName @group.CreatedByUser.LastName
                                </p>

                                @if (isOwner)
                                {
                                    <span class="badge bg-primary">You are the owner</span>
                                }
                                else if (isMember)
                                {
                                    <span class="badge bg-success">You are a member</span>
                                }
                            </div>

                            <div class="mt-3 d-flex flex-wrap gap-2">
                                @if (canView)
                                {
                                    <a asp-page="./Details" asp-route-id="@group.GroupId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                }

                                @if (canEdit)
                                {
                                    <a asp-page="./Edit" asp-route-id="@group.GroupId" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                }

                                @if (canInvite)
                                {
                                    <a asp-page="/GroupInvitations/Create" asp-route-groupId="@group.GroupId" class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-person-plus"></i> Invite
                                    </a>
                                }

                                @if (canDelete)
                                {
                                    <a asp-page="./Delete" asp-route-id="@group.GroupId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                }

                                @if (!canEdit && !canDelete && !canInvite && userRole == "Teacher")
                                {
                                    <span class="text-muted small">Read-only</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

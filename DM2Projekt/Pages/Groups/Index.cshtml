@page
@model DM2Projekt.Pages.Groups.IndexModel

@{
    ViewData["Title"] = "Groups";
    var userRole = HttpContext.Session.GetString("UserRole");
}

<h1>Groups</h1>

<!-- Only Admins can create new groups -->
@if (userRole == "Admin")
{
    <p>
        <a asp-page="Create" class="btn btn-primary">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Group[0].GroupName)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Group)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.GroupName)</td>
                <td class="text-center">
                    <a asp-page="./Details" asp-route-id="@item.GroupId">Details</a>

                    @if (userRole == "Admin")
                    {
                        <span> | </span>
                        <a asp-page="./Edit" asp-route-id="@item.GroupId">Edit</a>
                        <span> | </span>
                        <a asp-page="./Delete" asp-route-id="@item.GroupId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@page
@model DM2Projekt.Pages.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <!-- Page header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">User Overview</h2>
        <a asp-page="Create" class="btn btn-success">+ Add User</a>
    </div>

    <!-- Quick summary (just counts) -->
    <div class="row mb-4 text-center">
        <div class="col">
            <div class="bg-light rounded p-3 border">
                <div class="text-muted small">All</div>
                <div class="fw-bold">@Model.Users.Count</div>
            </div>
        </div>
        <div class="col">
            <div class="bg-light rounded p-3 border">
                <div class="text-muted small">Admins</div>
                <div class="fw-bold text-primary">
                    @Model.Users.Count(u => u.Role == DM2Projekt.Models.Enums.Role.Admin)
                </div>
            </div>
        </div>
        <div class="col">
            <div class="bg-light rounded p-3 border">
                <div class="text-muted small">Teachers</div>
                <div class="fw-bold text-info">
                    @Model.Users.Count(u => u.Role == DM2Projekt.Models.Enums.Role.Teacher)
                </div>
            </div>
        </div>
        <div class="col">
            <div class="bg-light rounded p-3 border">
                <div class="text-muted small">Students</div>
                <div class="fw-bold text-success">
                    @Model.Users.Count(u => u.Role == DM2Projekt.Models.Enums.Role.Student)
                </div>
            </div>
        </div>
    </div>

    <!-- Search + role filter -->
    <form method="get" class="row g-2 align-items-end mb-4">
        <div class="col-md-6">
            <label class="form-label">Search</label>
            <input name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name or email..." />
        </div>
        <div class="col-md-4">
            <label class="form-label">Role</label>
            <select name="RoleFilter" class="form-select">
                <option value="">All roles</option>
                @foreach (var role in Enum.GetValues(typeof(DM2Projekt.Models.Enums.Role)))
                {
                    <option value="@role" selected="@(role.ToString() == Model.RoleFilter?.ToString())">@role</option>
                }
            </select>
        </div>
        <div class="col-md-2 d-flex gap-2">
            <button type="submit" class="btn btn-outline-primary w-100">Apply</button>
            <a asp-page="./Index" class="btn btn-outline-secondary w-100">Reset</a>
        </div>
    </form>

    <!-- User table -->
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <span class="badge bg-secondary">@user.Role</span>
                    </td>
                    <td class="d-flex gap-2">
                        <a asp-page="./Details" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-page="./Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

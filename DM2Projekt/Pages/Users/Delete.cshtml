@page
@using DM2Projekt.Models
@model DM2Projekt.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger">Delete This User?</h2>

    <div class="card shadow-sm p-4 mb-4">
        <div class="row align-items-center">
            <!-- Profile image -->
            <div class="col-md-3 text-center">
                @if (!string.IsNullOrEmpty(Model.User.ProfileImagePath))
                {
                    <img src="@Model.User.ProfileImagePath" alt="Profile Image"
                         class="img-fluid rounded-circle border"
                         style="width: 150px; height: 150px; object-fit: cover;" />
                }
                else
                {
                    <div class="text-muted">No profile photo</div>
                }
            </div>

            <!-- User info -->
            <div class="col-md-9">
                <h4 class="mb-1">@Model.User.FirstName @Model.User.LastName</h4>
                <p class="mb-1"><strong>Email:</strong> @Model.User.Email</p>
                <p class="mb-2"><strong>User ID:</strong> @Model.User.UserId</p>
                <span class="badge
                    @(Model.User.Role == Role.Admin ? "bg-primary" :
                      Model.User.Role == Role.Teacher ? "bg-info" :
                      "bg-success")">
                    @Model.User.Role
                </span>
            </div>
        </div>
    </div>

    <!-- Confirmation message -->
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Heads up! Deleting this user is permanent and cannot be undone.
    </div>

    <!-- Confirm + cancel -->
    <form method="post">
        <input type="hidden" asp-for="User.UserId" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash3 me-1"></i> Confirm Delete
            </button>
            <a asp-page="./Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Cancel
            </a>
        </div>
    </form>
</div>

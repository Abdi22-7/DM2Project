@page
@model DM2Projekt.Pages.Bookings.DeleteModel
@{
    ViewData["Title"] = "Cancel Booking";
}

<h2 class="mb-4">Cancel Booking</h2>

<div class="alert alert-warning">
    Are you sure you want to cancel this booking?
</div>

<dl class="row">
    <dt class="col-sm-3">Created By</dt>
    <dd class="col-sm-9">@Model.Booking.CreatedByUser.Email</dd>

    <dt class="col-sm-3">Group</dt>
    <dd class="col-sm-9">@Model.Booking.Group.GroupName</dd>

    <dt class="col-sm-3">Room</dt>
    <dd class="col-sm-9">@Model.Booking.Room.RoomName</dd>

    

    <dt class="col-sm-3">Start Time</dt>
    <dd class="col-sm-9">@Model.Booking.StartTime.ToString("g")</dd>

    <dt class="col-sm-3">End Time</dt>
    <dd class="col-sm-9">@Model.Booking.EndTime.ToString("g")</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Booking.BookingId" />
    <button type="submit" class="btn btn-danger">Confirm Cancellation</button>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</form>

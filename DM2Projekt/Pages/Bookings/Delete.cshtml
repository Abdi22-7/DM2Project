@page
@model DM2Projekt.Pages.Bookings.DeleteModel
@{
    ViewData["Title"] = "Cancel Booking";
}

<div class="container py-4">

    <h2 class="mb-4 text-danger">❌ Cancel Booking</h2>

    <!-- strong alert with icon -->
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Are you sure you want to cancel this booking?
    </div>

    <!-- booking details inside card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">

                <dt class="col-sm-3 text-muted">Created By</dt>
                <dd class="col-sm-9 fw-semibold">@Model.Booking.CreatedByUser.Email</dd>

                <dt class="col-sm-3 text-muted">Group</dt>
                <dd class="col-sm-9 fw-semibold">@Model.Booking.Group.GroupName</dd>

                <dt class="col-sm-3 text-muted">Room</dt>
                <dd class="col-sm-9 fw-semibold">@Model.Booking.Room.RoomName</dd>

                <dt class="col-sm-3 text-muted">Date</dt>
                <dd class="col-sm-9">
                    <strong>@Model.Booking.StartTime?.ToString("ddd, dd MMMM yyyy")</strong>
                </dd>

                <dt class="col-sm-3 text-muted">Time</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-light text-dark">
                        @Model.Booking.StartTime?.ToString("HH:mm") – @Model.Booking.EndTime?.ToString("HH:mm")
                    </span>
                </dd>

            </dl>
        </div>
    </div>

    <!-- confirm and back buttons -->
    <form method="post" class="d-flex gap-2">
        <input type="hidden" asp-for="Booking.BookingId" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-x-circle"></i> Confirm Cancellation
        </button>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>

</div> <!-- end container -->

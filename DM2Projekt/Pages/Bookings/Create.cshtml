@page
@model DM2Projekt.Pages.Bookings.CreateModel
@{
    ViewData["Title"] = "Create Booking";
}

<h1>Create Booking</h1>

<form method="post">
    <!-- show all validation errors at top -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- group dropdown -->
    <div class="form-group">
        <label asp-for="Booking.GroupId"></label>
        <select asp-for="Booking.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
        <span asp-validation-for="Booking.GroupId" class="text-danger"></span>
    </div>

    <!-- user dropdown -->
    <div class="form-group">
        <label asp-for="Booking.CreatedByUserId"></label>
        <select asp-for="Booking.CreatedByUserId" class="form-control" asp-items="ViewBag.CreatedByUserId"></select>
        <span asp-validation-for="Booking.CreatedByUserId" class="text-danger"></span>
    </div>

    <!-- room dropdown -->
    <div class="form-group">
        <label asp-for="Booking.RoomId"></label>
        <select asp-for="Booking.RoomId" class="form-control" asp-items="ViewBag.RoomId" id="Booking_RoomId"></select>
        <span asp-validation-for="Booking.RoomId" class="text-danger"></span>
    </div>

    <!-- week picker (NOT asp-for!) -->
    <div class="form-group">
        <label for="weekPicker">Week</label>
        <input type="week" id="weekPicker" class="form-control" />
    </div>

    <!-- day picker -->
    <div class="form-group">
        <label for="dayOfWeek">Day</label>
        <select id="dayOfWeek" class="form-control">
            <option value="">-- Select Day --</option>
            <option value="1">Monday</option>
            <option value="2">Tuesday</option>
            <option value="3">Wednesday</option>
            <option value="4">Thursday</option>
            <option value="5">Friday</option>
        </select>
    </div>

    <!-- time slot picker -->
    <div class="form-group">
        <label>Time Slot</label>
        <select id="timeSlot" class="form-control">
            <option value="">-- Select Time Slot --</option>
        </select>
    </div>

    <!-- smartboard checkbox (only shown sometimes) -->
    <div class="form-group" id="smartboardCheckboxContainer" style="display: none;">
        <input asp-for="Booking.UsesSmartboard" type="checkbox" id="Booking_UsesSmartboard" />
        <label for="Booking_UsesSmartboard">Book Smartboard</label>
        <span asp-validation-for="Booking.UsesSmartboard" class="text-danger"></span>
    </div>

    <!-- hidden inputs -->
    <input asp-for="SelectedTimeSlot" type="hidden" />
    <input asp-for="Booking.StartTime" type="hidden" id="Booking_StartTime" />
    <input asp-for="Booking.EndTime" type="hidden" id="Booking_EndTime" />

    <button type="submit" class="btn btn-primary">Create Booking</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/booking-create.js"></script>
}

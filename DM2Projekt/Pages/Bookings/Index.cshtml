@page
@model DM2Projekt.Pages.Bookings.IndexModel
@{
    ViewData["Title"] = "Bookings";
}

<h2 class="mb-4">📅 Active Bookings</h2>

<p>
    <a asp-page="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New Booking
    </a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th scope="col">Group</th>
            <th scope="col">Room</th>
            <th scope="col">Smartboard</th>
            <th scope="col">Time Slot</th>
            <th scope="col">Created By</th>
            <th scope="col">Status</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Booking)
        {
            var now = DateTime.Now;
            bool isOngoing = item.StartTime <= now && item.EndTime > now;
            bool isFuture = item.StartTime > now;

            <tr>
                <td>@item.Group.GroupName</td>
                <td>@item.Room.RoomName</td>
                <td>
                    @if (item.Smartboard != null)
                    {
                        <span class="badge bg-secondary" title="Smartboard assigned">
                            Smartboard #@item.Smartboard.SmartboardId
                        </span>
                    }
                    else
                    {
                        <span class="text-muted" title="No smartboard selected">
                            <i class="bi bi-dash-circle"></i> None
                        </span>
                    }
                </td>
                <td>
                    <strong>@item.StartTime.ToString("ddd, dd MMM")</strong><br />
                    <small class="text-muted">
                        @item.StartTime.ToString("HH:mm") – @item.EndTime.ToString("HH:mm")
                    </small>
                </td>
                <td>@item.CreatedByUser.Email</td>
                <td>
                    @if (isOngoing)
                    {
                        <span class="badge bg-warning text-dark">Ongoing</span>
                    }
                    else if (isFuture)
                    {
                        <span class="badge bg-info text-dark">Upcoming</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Past</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-page="./Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-outline-primary" title="View full details">
                        <i class="bi bi-eye"></i> View
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.BookingId" class="btn btn-sm btn-outline-danger ms-1" title="Cancel this booking">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
